<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

{% block content %}

<div class="container">
<h2>View Roles</h2> 
<table class="table" style="border: 1px solid;">
  <thead>
    <tr>
      <th scope="col" style="border: 1px solid;">Job Role Name</th>
      <th scope="col" style="border: 1px solid;">Job Specification Summary</th>
    </tr>
  </thead>
  <tbody>

{% if roles and roles.length > 0 %} 
{% for role in roles %}
<tr> 
<td style="width: 1%;white-space: nowrap;border: 1px solid;"><a href="{{role.specification}}">{{role.jobName}}</a></td>
<td>{{role.specSummary}}</td>
</tr>
{% endfor %} 

{% else %} 
There are no job roles. 
{% endif %}
  </tbody>
</table>
</div>
{% endblock %} 
